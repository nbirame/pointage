<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_retard_agent">
        <div class="header" style="margin-top: 0px;">
            <img src="/pointage/static/src/img/fon.png" alt="Logo" class="w-910 h-3"/>
        </div>
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="object">
                <t t-call="web.external_layout">
                    <div class="page" t-if="object.get_late_two_day_of_week()">
                        <h3 style="text-align:center;color:#1A428A;margin-top:50px;">
                            Récaputilative des agents ayant enregistré au moins trois retards durant la période du
                            <span t-esc="object.last_week_start_date()" t-options='{"widget": "date"}'/>
                            au <span t-esc="object.last_week_end_date()" t-options='{"widget": "date"}'/>.
                        </h3>
                        <p style="text-align:center;font-weight: bold; color:#1A428A;">Historique</p>
                        <table class="table table-bordered" width="590" border="1" cellpadding="0" cellspacing="0"
                               style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                            <thead>
                                <tr t-if="object.get_late_two_day_of_week()[0]">
                                    <th>N*</th>
                                    <th>AGENT</th>
                                    <th>Lundi</th>
                                    <th>Mardi</th>
                                    <th>Mercredi</th>
                                    <th>Jeudi</th>
                                    <th>Vendredi</th>
                                </tr>
                            </thead>
                            <tbody t-foreach="object.get_late_two_day_of_week()" t-as="retard">
                                <tr>
                                    <td>
                                       <span t-esc="retard_index+1"/>
                                    </td>

                                    <td>
                                        <span t-esc="retard[1]"/>
                                    </td>
                                    <t t-foreach="retard[2:]" t-as="col_value">
                                        <td><span t-esc="col_value"/></td>
                                    </t>
                                </tr>
                            </tbody>
                        </table>
                        <p class="text-right">
                            Fait à Dakar, le
                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/>
                        </p>
                        <h6 class="text-right">
                            La Directrice des Ressources Humaines
                        </h6>
                    </div>
                    <div t-else="">
                        <h3 style="text-align:center;color:#1A428A;margin-top:50px;">
                            Il n'y a pas de retard
                            <span t-esc="object.last_week_start_date()" t-options='{"widget": "date"}'/>
                            au <span t-esc="object.last_week_end_date()" t-options='{"widget": "date"}'/>.
                        </h3>
                    </div>
                </t>
            </t>
        </t>
    </template>


</odoo>
